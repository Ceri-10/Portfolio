---
import "@fontsource-variable/nunito-sans";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color: white;
    color-scheme: light dark;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
  }

  html {
    font-family: "Nunito Sans Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    background: #050505;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }

  p {
    color: #d1d5db;
  }

  h1,
  h2 {
    font-family: "Poppins", sans-serif;
  }

  .h2-center {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    justify-content: center;
  }

  header {
    top: 0;
    position: sticky;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }

  .header-background {
    width: 100vw;
    height: 100vh;
    background-size: cover;
    background-color: rgba(0, 0, 0, 0.3);
  }

  .border-style {
    padding: 2em;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1em;
    background: rgba(119, 119, 119, 0.05);
    font-size: 1.1rem;
    transition:
      transform 0.3s ease,
      background-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .border-style:hover {
    transform: scale(1.05);
    background-color: rgba(128, 128, 128, 0.1);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-color: #0d87d8;
  }

  .btn-curriculum {
    border-width: 1px;
  }

  .disabled-button {
    opacity: 0.5;
    pointer-events: none;
    cursor: not-allowed;
  }

  /*ANIMATIONS*/

  .nav-item {
    position: relative;
    text-decoration: none;
    color: white;
    transition:
      color 0.3s ease,
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .nav-item::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background-color: white;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .nav-item:hover::before {
    transform: scaleX(1);
  }

  .nav-item:hover {
    color: #e0e0e0;
    transform: translateY(-3px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }

  .social-icon {
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }

  .social-icon:hover {
    transform: scale(1.3);
    color: #f0f0f0;
  }

  .text-animation {
    color: transparent;
    background: linear-gradient(270deg, #1645e0, #ffffff, #0d87d8, #02ccff);
    background-size: 600% 600%;
    background-clip: text;
    -webkit-background-clip: text;
    animation: textAnimation 10s ease infinite;
  }

  @keyframes textAnimation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .button {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 15px 30px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 16px;
    cursor: pointer;
    overflow: hidden;
    transition:
      background-color 0.3s,
      color 0.3s,
      width 0.3s,
      padding-right 0.3s;
    width: auto;
  }

  .button .icon {
    position: absolute;
    left: 15px;
    bottom: -50px;
    transition:
      bottom 0.3s,
      opacity 0.3s;
    opacity: 0;
    width: 20px;
    height: 20px;
  }

  .button .text {
    margin-left: 0;
    transition: margin-left 0.3s;
  }

  .button:hover {
    background-color: white;
    color: #2c3940;
    
  }

  .button:hover .icon {
    bottom: 20px;
    opacity: 1;
  }

  .button:hover .text {
    margin-left: 20px;
  }

  .button-project:hover {
    border: 2px solid white;
  }

  .button-footer {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center; 
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 16px;
    cursor: pointer;
    overflow: hidden;
    transition:
      background-color 0.3s,
      color 0.3s,
      width 0.3s,
      padding-right 0.3s;
    width: auto;
  }

  .button-footer .icon-footer {
    position: absolute;
    left: 15px;
    bottom: -50px;
    transition:
    bottom 0.3s,
    opacity 0.3s;
    opacity: 0;
    

  }

  .button-footer .text {
    margin-left: 0;
    transition: margin-left 0.3s;
    font-weight: bold;
  }

  .button-footer:hover {
    background-color: white;
    color: #2c3940;
  }

  .button-footer:hover .icon-footer {
    bottom: 13px;
    opacity: 1;
  }

  .button-footer:hover .text {
    margin-left: 30px;
  }

  .icon-footer .button-footer{
    position: absolute;
    left: 15px;
    bottom: -50px;
    transition:
      bottom 0.3s,
      opacity 0.3s;
    opacity: 0;
    width: 20px;
    height: 20px;
  }

  /*RESPONSIVE*/

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
